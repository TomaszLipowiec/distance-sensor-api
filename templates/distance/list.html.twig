{% extends "base.html.twig" %}

{% block title %}Distance list{% endblock %}

{% block stylesheets %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
        body{
            font-family: 'Roboto', sans-serif;
            margin: 0;
            height: 100%;
            width: 100%;
        }
        .distance-list{
            width: 100%;
            height: 96vh;
            box-sizing: border-box;
        }
        .distance-list-container{
            box-sizing: border-box;
            margin-top: 20px;
            margin-bottom: 20px;
            height: 78%;
            width: 900px;
            margin-left: auto;
            margin-right: auto;
        }
        .list-header{
            width: 100%;
            height: 70px;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            box-shadow: 10px 5px 5px gray;
        }
        .list-header-element{
            width: 120px;
            padding: 15px;
        }
        .list-header-element p{
            text-align: center;
            font-size: 24px;
            margin: 0;
        }
        .list-element{
            width: 120px;
            padding: 2px 15px 2px;
            margin: 1px 0 1px;
        }
        .list-element p{
            text-align: center;
            font-size: 20px;
            margin: 0;
        }
        ul{
            padding-left: 7px;
            padding-right: 7px;
            overflow-y: auto;
            height: 600px;
        }
        li{
            width: 100%;
            display: flex;
            justify-content: space-between;
            border-radius: 5px;
        }
        li:nth-child(even){
            background-color: lightgray;
            box-shadow: 1px 1px 5px lightgray;
        }
        nav{
            box-sizing: border-box;
            height: 10%;
            width: 100%;
            padding-top: 1%;
            padding-bottom: 1%;
            box-shadow: 10px 5px 5px gray;
        }
        nav p{
            text-align: center;
            margin: 0;
            font-size: 28px;
        }
        footer{
            box-sizing: border-box;
            height: 12%;
            width: 100%;
            position: relative;
            bottom: 0;
            padding-top: 20px;
            box-shadow: 10px -5px 5px gray;
        }
        footer p{
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="distance-list">
        <nav>
            <p>Distance Sensor List</p>
        </nav>

        <div class="distance-list-container">
            <div class="list-header">
                <div class="list-header-element"><p>Id</p></div>
                <div class="list-header-element"><p>Date</p></div>
                <div class="list-header-element"><p>Cm</p></div>
            </div>
            <ul>
                {% if distances is defined %}
                    {% for distance in distances %}
                        <li>
                            <div class="list-element"><p>{{ distance.id }}</p></div>
                            <div class="list-element"><p>{{ distance.date | date('Y-m-d H:i:s') }}</p></div>
                            <div class="list-element"><p>{{ distance.cm }}</p></div>
                        </li>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>

        <footer>
            <p>Tomasz Lipowiec</p>
            <p>197271</p>
        </footer>
    </section>
{% endblock %}